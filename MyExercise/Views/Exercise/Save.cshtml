@model MyExercise.Models.ExerciseRecord

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Save", "Exercise", FormMethod.Post, new { id = "popupForm" }))
{

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-group">
    @Html.LabelFor(model => model.ExerciseName, new { @class = "col-lg-3 col-sm-3 control-label" })
    <div class="col-lg-6">
        @Html.EditorFor(model => model.ExerciseName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ExerciseName, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.ExerciseDate, new { @class = "col-lg-3 col-sm-3 control-label" })
    <div class="col-lg-6">
        @Html.EditorFor(model => model.ExerciseDate, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ExerciseDate, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.DurationInMinutes, new { @class = "col-lg-3 col-sm-3 control-label" })
    <div class="col-lg-6">
        @Html.EditorFor(model => model.DurationInMinutes, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.DurationInMinutes, "", new { @class = "text-danger" })

    </div>
</div>

<div>
    <input type="submit" value="Save" onclick="Popupform()" /> //then it could call the global function variable Popupform
</div>
}
